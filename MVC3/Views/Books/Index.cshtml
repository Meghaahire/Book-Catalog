@{
}

@model List<MVC3.Models.Domain.Book>

<div class="container">
    <div class=row>
        <h3>Book List</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>BookName</th>
                    <th>Author Name</th>
                    <th>Publish Date</th>
                    <th>Price</th>
                   
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@b.Id</td>
                        <td>@b.BookName</td>
                        <td>@b.AuthorName</td>
                        <td>@b.PublishDate.ToString("dd-MM-yyyy")</td>
                       
                        <td>@b.Price</td>
                        <td><a href="Books/View/@b.Id">View</a></td>

                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>