@model MVC3.Models.ViewModel.UpdateBookViewModel

<div class=" container">
    <div class="row g-3">
        <h3>Edit Book</h3>
        <form method="post" action="View">
            <div class="col-md-4">
                <lable class="form-label">Id</lable>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="col-md-4">
                <lable class="form-label">BookName</lable>
                <input type="text" ap-for="" class="form-control" asp-for="BookName" />
            </div>
            <div class="col-md-4">
                <lable class="form-label">Aithor Name</lable>
                <input type="text" ap-for="" class="form-control" asp-for="AuthorName" />
            </div>
            <div class="col-md-4">
                <lable class="form-label">Publish date</lable>
                <input type="date" ap-for="" class="form-control" asp-for="PublishDate" />
            </div>
            <div class="col-md-4">
                <lable class="form-label">Price</lable>
                <input type="number" ap-for="" class="form-control" asp-for="Price" />
            </div>
            <div class="col-md-12">
                <input type="submit" value="Update" class="btn btn-secondary" />
                <input type="submit" value="Delete" class="btn btn-danger" asp-action="Delete" asp-controller="Books" />

            </div>
        </form>
    </div>
</div>
